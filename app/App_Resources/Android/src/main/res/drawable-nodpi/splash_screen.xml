    <item>
        <bitmap android:gravity="fill" android:src="@drawable/background" />
    </item>
    <item>
        <bitmap 
        android:gravity="center" android:src="@drawable/logo" 
        />
    </item>
    <item
    android:bottom="60dp"
    android:left="5dp">
      <bitmap android:gravity="center_vertical|left|bottom"  android:src="@drawable/linfe" />
